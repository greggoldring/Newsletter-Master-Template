  <partial id="font_settings">
      <colorpicker id="color" label="Text Color" />
      <textbox id="fontsize" label="Font Size"  help="Enter the number of pixels that your text should be"
        regex="^[0-9]{0,3}[\.]{0,1}[0-9]{0,2}$" regexerror="Please enter a number." />
      <textbox id="lineheight" label="Line Height" help="Enter the line-height, relative to the font size. '1' equals the same line height as font size." 
        regex="^[0-9]{0,3}[\.]{0,1}[0-9]{0,2}$" regexerror="Please enter a number." />
  </partial>
  <partial id="content_types">
    <type id="article" label="Default Article" landingpage="landingpage">
      <textbox id="title" label="Title" />
      <image id="image" label="Image" />
      <richtext id="teaser" label="Email Teaser Text" />
      <richtext id="lpContent" label="Landing Page Content" />
      <textbox id="external_link" label="Or Use External Link" />
      <textbox id="link_label" label="Landing Page/External Link Label" default="Read More" />
