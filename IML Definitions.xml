				<listbox id="side" label="Position">
					<listitem id="left" text="Left" default="default" />
					<listitem id="above" text="Above" />
					<listitem id="right" text="Right" />
				</listbox>
				<listbox id="flow" label="Text wrap" help="Wraps text to the full width of line immedately below the image.">
					<listitem id="wrap" text="On" default="default" />
					<listitem id="column" text="Off" />
				</listbox>
				<textbox id="maxWidth" label="Max width" help="The maximum width of the image (in pixels). This value is ignored when 'Position' is set to 'Above'. In that case the maxwidth will become the width of it's container." regex="^\d*$" regexerror="Please enter a whole number only." />
			</type>
			<type id="overrides" label="Background settings" nested="nested">
				<colorpicker id="bgcolor" label="Background color" default="" /> 
			</type>
