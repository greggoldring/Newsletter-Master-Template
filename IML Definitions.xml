	<partial id="font_settings">
		<colorpicker id="color" label="Font color" />
		<textbox id="fontsize" label="Font size"  help="The size (in pixels) of the font."
        regex="^[0-9]{0,3}[\.]{0,1}[0-9]{0,2}$" regexerror="Please enter a number." />
		<textbox id="lineheight" label="Line height" help="The vertical distance between lines of text measured in ratio to the font-size. '1' equals the same line height as font size." 
        regex="^[0-9]{0,3}[\.]{0,1}[0-9]{0,2}$" regexerror="Please enter a number." />
	</partial>
