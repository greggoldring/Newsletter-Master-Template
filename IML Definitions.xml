          <listbox id="side" label="Image Side">
              <listitem id="left" text="Left" default="default" />
              <listitem id="above" text="Above" />
              <listitem id="right" text="Right" />
          </listbox>
          <listbox id="flow" label="Text Wrap around Image">
              <listitem id="wrap" text="Wrap Text Below" default="default" />
              <listitem id="column" text="Two Separate Columns" />
          </listbox>
          <textbox id="maxWidth" label="Max Width" 
                   help="The maximum width an image should appear in the desktop version in pixels. Ignored if image is above Article" 
                   regex="^\d*$" regexerror="Please enter a whole number only." />
      </type>
      

      <type id="overrides" label="Override Default Settings" nested="nested">
        <colorpicker id="bgcolor" label="Article Background Color" default="" />
      </type>
      <type id="header" label="Override Header Settings" nested="nested">
        <colorpicker id="color" label="Header Text Color" />
